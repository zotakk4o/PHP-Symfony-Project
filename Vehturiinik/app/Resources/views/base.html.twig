<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Vehturiinik{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/vehturiinik.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header>
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('home_index') }}">Vehturiinik</a>
                        </div>
                        <div class="navbar-header pull-left">
                            <a class="navbar-brand" href="#">About</a>
                        </div>
                        {% if app.user %}
                            <div class="navbar-header pull-right">
                                <a class="navbar-brand" href="{{ path('logout') }}">Logout</a>
                            </div>
                            <li class="dropdown pull-right">
                                <a href="{{ path('view_cart') }}" class="navbar-brand" data-toggle="dropdown" role="button" aria-expanded="false">ðŸ›’</a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="{{ path('view_cart') }}">View Cart</a></li>
                                    <li><a href="#">Clear Cart</a></li>
                                </ul>
                            </li>
                        {% else %}
                        <div class="navbar-header pull-right">
                            <a class="navbar-brand" href="{{ path('user_register') }}">Register</a>
                        </div>
                        <div class="navbar-header pull-right">
                            <a class="navbar-brand" href="{{ path('security_login') }}">Login</a>
                        </div>
                        {% endif %}
                        <div class="navbar-header pull-right">
                            <a class="navbar-brand" href="{{ path('view_shop') }}">Shop</a>
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %}
        <div class="container body-container">
            {% block body %}
                {% block main %}{% endblock %}
            {% endblock %}
        </div>
        {% block footer %}
            <footer>
                <nav class="navbar navbar-default navbar-fixed-bottom ">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('home_index') }}">&copy; Vehturiinik - SoftUni Project With Symfony</a>
                        </div>
                    </div>
                </nav>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.2.0.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/moment.js') }}"></script>
            <script src="{{ asset('js/vehturiinik.js') }}"></script>
        {% endblock %}
    </body>
</html>
