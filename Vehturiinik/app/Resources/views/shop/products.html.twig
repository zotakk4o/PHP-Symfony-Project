{% extends 'base.html.twig' %}

{% block main %}
    {% if app.user %}
        <h2>Your Cash is: {{ app.user.money }} vehturiiki</h2>
    {% endif %}
    {% for product in products %}
        <div class="panel panel-info">
            <div class="panel-heading">
                {% if app.user %}
                    <h3 class="panel-title"><a class="pull-right purchases-actions" href="{{ path('add_product', {id: product.id}) }}">Add to Cart</a></h3>
                {% endif %}
                <h3 class="panel-title">{{ product.name }}</h3>
            </div>
            <div class="panel-body">
                {{ product.description }}
                <div>
                    {% if product.discount %}
                    Price: <h4 class="price discount">{{ product.price - (product.price * product.discount / 100)  }} vehturiiki</h4>
                        Discount: {{ product.discount }}%
                    {% else %}
                        Price: <h4 class="price">{{ product.price }} vehturiiki</h4>
                    {% endif %}
                    <div>
                        Quantity in Stock: <h4 class="quantity">{{ product.quantity }}</h4>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}