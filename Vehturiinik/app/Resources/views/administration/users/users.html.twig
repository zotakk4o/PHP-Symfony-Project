{% extends 'base.html.twig' %}

{% block main %}
    <table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Full Name</th>
        <th>Roles</th>
        <th>Options</th>
    </tr>
    </thead>
        <tbody>
    {% for user in users%}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.fullName }}</td>
                <td>
                    Roles:
                    {% for role in user.roles %}
                        <b>{{ role }}</b>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('edit_user',{id:user.id}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('view_user_purchases',{id:user.id}) }}" class="btn btn-primary">Manage Purchases</a>
                </td>
            </tr>
    {% endfor %}
            </tbody>
    </table>
{% endblock %}