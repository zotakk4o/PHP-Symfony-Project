{% extends 'base.html.twig' %}

{% block main %}
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>User</th>
        <th>Product</th>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
    {% for purchase in purchases %}
        <tr>
            <td>{{ purchase.user.fullName }}</td>
            <td>{{ purchase.product.name }}</td>
            <td><a href="{{ path('remove_purchase', {userId: purchase.userId, purchaseId: purchase.id }) }}" class="btn btn-primary">Remove</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}

