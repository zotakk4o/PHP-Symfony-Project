{% extends 'base.html.twig' %}

{% block main %}
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name}}</td>
                <td>{{ category.summaryOfDescription}}</td>
                <td>
                    <a href="{{ path('remove_category', {'id': category.id}) }}" class="btn btn-primary">Remove</a>
                    <a href="{{ path('edit_category', {'id': category.id}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('discount_category', {'id': category.id}) }}" class="btn btn-primary">Discount</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h1>
        <a href="{{ path('add_category') }}" class="btn btn-primary">Add Category</a>
    </h1>
    {{ knp_pagination_render(categories) }}
{% endblock %}