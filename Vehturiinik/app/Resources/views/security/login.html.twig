{% extends 'base.html.twig' %}

{% block main %}
    <div>
        <form class="form-horizontal" name="login" method="post" action="{{ path('security_login') }}">
            <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <h3><label for="inputUsername" class="col-lg-2 control-label">Username</label></h3>
                    <div class="col-lg-10">
                        <input type="text" name="_username" class="form-control" id="inputUsername" placeholder="Username" required>
                    </div>
                </div>
                <div class="form-group">
                    <h3><label for="inputPassword" class="col-lg-2 control-label">Password</label></h3>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="_password" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <a href="{{ path('home_index') }}" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}